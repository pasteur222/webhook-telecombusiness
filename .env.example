# WhatsApp Business API verification token
VERIFY_TOKEN=your_verification_token_here

# Your Bolt app webhook endpoint (without trailing slash)
BOLT_WEBHOOK_ENDPOINT=https://your-bolt-app.com

# Port for the webhook server (optional, defaults to 3000)
PORT=3000

# Log level (optional, defaults to 'info')
LOG_LEVEL=info

# Meta API credentials (optional, for template management)
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret

# Meta WhatsApp API access token (for sending messages)
META_ACCESS_TOKEN=your_meta_access_token